<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alextangen.unitedpipeline.NewJobMenu">

    <Spinner
        android:id="@+id/spins"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:layout_below="@id/spins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Pipes"
        android:inputType="numberDecimal"
        android:hint="Enter Pipe Fitter Hours: "
        android:textSize="20sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LBS"
        android:inputType="numberDecimal"
        android:hint="Enter Laborer Hours: "
        android:layout_below="@id/Pipes"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/allDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Save"
        android:layout_below="@id/LBS"
        android:onClick="carryThisOn"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/shows"
        android:layout_below="@+id/allDone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:textColor="@color/white"
        android:text="Back"
        android:layout_alignParentBottom="true"
        android:onClick="goBack"
        android:textSize="20sp" />

</RelativeLayout>
